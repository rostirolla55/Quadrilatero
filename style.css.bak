.content-body img {
    max-width: 100%;
    height: auto;
    margin: 15px auto;
    display: block;
    border: 1px solid #ccc;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

#playAudio {
    padding: 10px 20px;
    border: none;
    color: white;
    cursor: pointer;
    margin: 15px 0;
    font-size: 1em;
    transition: background-color 0.3s;
    display: block;
    text-align: center;
    border-radius: 5px;
}

#playAudio.play-style {
    background-color: #007bff;
}

#playAudio.pause-style {
    background-color: #ff8c00;
}

#audioPlayer {
    display: none;
}

.info-footer {
    border-top: 1px solid #ccc;
    padding-top: 15px;
    margin-top: 30px;
    font-size: 0.85em;
    color: #666;
    line-height: 1.4;
    text-align: center;
}