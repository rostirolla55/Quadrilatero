/* style.css - Versione Finale Completa con Doppio Menu Hamburger */

/* -------------------- RESET & BASE -------------------- */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    /* Spazio per l'header fisso */
    padding-top: 60px;
    background-color: #f4f4f4;
    opacity: 0;
    transition: opacity 0.3s ease-in;
}

body.content-loaded {
    opacity: 1;
}

.main-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 60px;
    z-index: 1000;
    background-color: #ffffff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    /* Hamburger a sinistra, Gruppo bandiere/POI a destra */
    justify-content: space-between;
    padding: 0 15px;
    box-sizing: border-box;
}

.content-body {
    padding: 20px;
    max-width: 800px;
    margin: 0 auto;
    text-align: justify;
}

/* -------------------- MENU PRINCIPALE (A Sinistra) -------------------- */

.menu-toggle {
    background: none;
    border: none;
    cursor: pointer;
    /* Sempre visibile su tutti gli schermi */
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 20px;
    width: 30px;
    z-index: 1001;
    margin-right: 10px;
}

.menu-toggle .bar {
    width: 100%;
    height: 3px;
    background-color: #333;
    transition: all 0.3s linear;
}

/* Animazione X al click */
.menu-toggle.active .bar:nth-child(2) {
    opacity: 0;
}

.menu-toggle.active .bar:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
}

.menu-toggle.active .bar:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
}

/* Contenitore Menu Principale (Scivola da Sinistra) */
#navPlaceholder {
    position: fixed;
    /* FIX: Inizia esattamente sotto l'header */
    top: 60px;
    left: 0;
    width: 100%;
    max-width: 300px;
    /* Larghezza massima mobile/tendina */
    height: calc(100% - 60px);
    background-color: #000000;

    /* Nascosto */
    transform: translateX(-100%);
    transition: transform 0.3s ease-in-out;

    z-index: 999;
    overflow-y: auto;
}

#navPlaceholder.active {
    /* Mostrato */
    transform: translateX(0);
}

.nav-links {
    list-style: none;
    margin: 0;
    padding: 20px;
    display: flex;
    flex-direction: column;
    /* Sempre in colonna */
}

.nav-links li a {
    color: white;
    text-decoration: none;
    font-size: 1.2em;
    display: block;
    padding: 10px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

/* -------------------- ELEMENTI DI DESTRA (Bandiere e POI) -------------------- */

.right-header-group {
    display: flex;
    align-items: center;
}

/* Bottone POI Verde */
#nearbyPoiButton {
    background-color: #4CAF50;
    color: white;
    padding: 10px 15px;
    border: none;
    cursor: pointer;
    font-size: 0.9em;
    height: 40px;
    line-height: 1;
    box-sizing: border-box;
    border-radius: 4px;
    /* Il JS lo mostrer√†/nasconder√†, ma qui non lo nascondiamo di default */
    display: block;
}

/* Contenitore Menu POI (Scivola da Destra) */
#nearbyMenuPlaceholder {
    position: fixed;
    top: 60px;
    right: 0;
    /* Ancorato a destra */
    width: 100%;
    max-width: 300px;
    /* Larghezza massima mobile/tendina */
    height: calc(100% - 60px);
    background-color: #333333;
    /* Grigio scuro per distinzione */

    /* Nascosto a destra */
    transform: translateX(100%);
    transition: transform 0.3s ease-in-out;

    z-index: 998;
    overflow-y: auto;
}

#nearbyMenuPlaceholder.poi-active {
    /* Mostrato */
    transform: translateX(0);
}

.poi-links {
    list-style: none;
    margin: 0;
    padding: 20px;
    display: flex;
    flex-direction: column;
}

.poi-links li a {
    color: #f4f4f4;
    text-decoration: none;
    font-size: 1em;
    display: block;
    padding: 10px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}


/* -------------------- SELETTORE LINGUA -------------------- */

.language-selector {
    display: flex;
    gap: 5px;
    margin-right: 15px;
}

.language-selector button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    opacity: 0.5;
    transition: opacity 0.2s;
}

.language-selector button.active {
    opacity: 1;
}

.language-selector img {
    width: 24px;
    height: 16px;
    vertical-align: middle;
    border: 1px solid #ccc;
}


/* -------------------- CONTENUTO (Immagine, Audio, Footer) -------------------- */

/* style.css - Sezione Immagine di Testata e Titolo aggiornata */

/* Contenitore dell'immagine di testata */
.header-image-container {
    position: relative;
    width: 100%;

    /* üî• FIX: Usa aspect-ratio per mantenere la proporzione 16:9 su tutti i dispositivi. */
    aspect-ratio: 16 / 9;
    height: auto;
    /* L'altezza √® ora gestita dal rapporto, non da un valore fisso */

    overflow: hidden;
    margin-bottom: 20px;
    margin-top: 0;
}

/* L'immagine stessa all'interno del container */
.header-image-container img {
    /* L'immagine deve occupare il 100% dell'area definita dall'aspect-ratio */
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

/* Il titolo rimane posizionato in modo assoluto sul fondo */
.header-title {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    color: white;
    padding: 10px 15px;
    margin: 0;
    font-size: 1.5em;
    box-sizing: border-box;
    text-align: center;
}

